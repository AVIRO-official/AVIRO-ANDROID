<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="androidx.core.content.ContextCompat"/>
        <variable
            name="viewmodel"
            type="com.android.aviro.presentation.home.ui.mypage.MypageViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fragment_mypage_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray7"
    tools:context=".presentation.home.ui.mypage.MypageFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/Gray7"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="챌린지"
                android:textColor="@color/Gray0"
                android:textSize="18sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/mypageBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_mypage"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.appcompat.widget.Toolbar>



        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/Gray7"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <TextView
                android:id="@+id/periodTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="@{viewmodel.challengePeriod}"
                android:textColor="@color/Gray2"
                android:textSize = "17sp"
                android:fontFamily="@font/pretendard_medium"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/mainTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:text="@{viewmodel.challengeTitle}"
                android:textColor="@color/Gray0"
                android:textSize = "32sp"
                android:fontFamily="@font/pretendard_semibold"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="챌린지"
                    android:textColor="@color/Gray0"
                    android:textSize="32sp"
                    tools:ignore="HardcodedText" />
                <Button
                    android:id="@+id/infoBtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toEndOf="@id/subTitleTextView"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/ic_info"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/nicknameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:text="@{viewmodel.nickname}"
                android:textColor="@color/Gray0"
                android:textSize = "20sp"
                android:fontFamily="@font/pretendard_semibold"
                tools:ignore="HardcodedText"/>

            <!-- 챌린지  -->
            <FrameLayout
                android:id="@+id/challengeFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16.3dp"
                android:layout_marginEnd="15.7dp"
                android:layout_marginTop="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_marginTop="84dp"
                    android:background="@drawable/base_roundsquare_gray6_11"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="87dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textColor="@color/Gray0"
                        android:textSize="17sp"
                        android:text="TextView" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pretendard_medium"
                        android:textColor="@color/Gray2"
                        android:textSize="15sp"
                        android:text="" />
                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/frame_challenge_circle"
                    android:orientation="vertical" />
            </FrameLayout>

            <!-- 나의 활동 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="19dp"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@+id/challengeFrame">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart = "19dp"
            android:layout_marginEnd = "18.67dp"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="center"
                android:text="등록한 가게"
                android:textColor="@color/Gray1"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/registerationNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="@{viewmodel.registerAmount + '개'}"
                android:textColor="@color/Gray0"
                android:textSize="20sp" />
        </LinearLayout>
        <View
            android:background="@color/Gray5"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginStart = "10dp"
            android:layout_marginEnd = "10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24.83dp"
            android:layout_marginEnd="24.83dp"
            android:layout_weight="0.3"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="작성 후기"
                android:textColor="@color/Gray1"
                android:textSize = "14sp"
                android:fontFamily="@font/pretendard_semibold"/>
            <TextView
                android:id="@+id/reviewNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="@{viewmodel.reviewAmount + '개'}"
                android:textColor="@color/Gray0"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:background="@color/Gray5"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginStart = "10dp"
            android:layout_marginEnd = "10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart = "26.67dp"
            android:layout_marginEnd = "27dp"
            android:layout_weight="0.3"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="즐겨찾기"
                android:textColor="@color/Gray1"
                android:textSize = "14sp"
                android:fontFamily="@font/pretendard_semibold"/>
            <TextView
                android:id="@+id/bookmarkNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="@{viewmodel.bookmarkAmount + '개'}"
                android:textColor="@color/Gray0"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>