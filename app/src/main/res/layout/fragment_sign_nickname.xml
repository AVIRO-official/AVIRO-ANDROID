<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="androidx.core.content.ContextCompat"/>
        <variable
            name="viewmodel"
            type="com.android.aviro.presentation.sign.SignViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/mainTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반가워요!\n닉네임을 정해주세요."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/Cobalt"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="24sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/subTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어비로에서 불릴 닉네임에요."
            android:textColor="@color/Gray1"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/mainTextView"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subTextView">


            <EditText
                android:id="@+id/editTextNickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart = "20dp"
                android:ems="10"
                android:maxLength="8"
                android:inputType="textMultiLine|textNoSuggestions"
                android:imeOptions="actionDone"
                android:hint="닉네임을 입력해주세요"
                android:textSize="18sp"
                android:textColor = "@color/Gray0"
                android:background = "@drawable/base_edittext_non"
                app:animated="@{viewmodel.isNext}"
                android:onTextChanged="@{viewmodel::onTextChanged}" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nickname_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@{viewmodel.nicknameNoticeTextColor}"
                    android:text='@{viewmodel.nicknameNoticeText}' />
                <TextView
                    android:id="@+id/nickname_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text='@{viewmodel.nicknameAccountText}'/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background = "@{viewmodel.isNext}"
            android:enabled="@{viewmodel.isNext}"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"></LinearLayout>
        <!--android:onClick="@{() -> viewmodel.onClick(nextBtn)}"-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>